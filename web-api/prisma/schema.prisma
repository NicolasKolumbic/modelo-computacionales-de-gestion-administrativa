datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  // primary key
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  description    String
  price     Float
  stock     Int

  // aca generamos una tabla relacional
  // definimos el objecto en el modelo y debajo
  category   Category   @relation(fields: [categoryId], references: [id])
  // para decirlo de alguna forma familiar, no se si es asi, esto seria la Foreign Key
  categoryId String    @db.ObjectId

   @@map("Products")
}

model Category {
    id  String  @id @default(auto()) @map("_id") @db.ObjectId
    description String
    products Product[]

    @@map("Categories")
}